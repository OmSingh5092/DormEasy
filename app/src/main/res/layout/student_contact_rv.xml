<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/student_m_rv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Om Singh"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_m_rv_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Mess Department"
        android:textColor="#a3a80c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_m_rv_name" />

    <ImageButton
        android:id="@+id/student_m_rv_call"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_corners_ripple"
        android:backgroundTint="#0e6db0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/student_m_rv_message"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_m_rv_auth"
        app:srcCompat="@drawable/icon_call" />

    <ImageButton
        android:id="@+id/student_m_rv_mail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corners_ripple"
        android:backgroundTint="#c76a18"
        app:layout_constraintBottom_toBottomOf="@+id/student_m_rv_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/student_m_rv_message"
        app:layout_constraintTop_toTopOf="@+id/student_m_rv_message"
        app:srcCompat="@drawable/icon_email" />

    <ImageButton
        android:id="@+id/student_m_rv_message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corners_ripple"
        android:backgroundTint="#0eb03c"
        app:layout_constraintBottom_toBottomOf="@+id/student_m_rv_call"
        app:layout_constraintEnd_toStartOf="@+id/student_m_rv_mail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/student_m_rv_call"
        app:layout_constraintTop_toTopOf="@+id/student_m_rv_call"
        app:srcCompat="@drawable/icon_whatsapp" />

    <View
        android:id="@+id/divider7"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_m_rv_call"
        tools:layout_editor_absoluteX="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>