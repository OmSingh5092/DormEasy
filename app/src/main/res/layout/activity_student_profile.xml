<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="173dp"
                android:layout_height="31dp"
                android:layout_marginTop="15dp"
                android:text="Registration No"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="86dp"
                android:layout_height="31dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/student_login_hostel_display" />

            <TextView
                android:id="@+id/student_profile_name_display"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#2b00ba"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.591"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5" />

            <TextView
                android:id="@+id/student_profile_gender_display"
                android:layout_width="93dp"
                android:layout_height="31dp"
                android:text="Male"
                android:textAlignment="center"
                android:textColor="#2b00ba"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.714"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <TextView
                android:id="@+id/student_profile_batch_display"
                android:layout_width="93dp"
                android:layout_height="31dp"
                android:text="Male"
                android:textAlignment="center"
                android:textColor="#2b00ba"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.708"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/student_profile_reg_display"
                android:layout_width="102dp"
                android:layout_height="31dp"
                android:text="20185092"
                android:textAlignment="center"
                android:textColor="#2b00ba"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <TextView
                android:id="@+id/student_profile_dob_display"
                android:layout_width="107dp"
                android:layout_height="31dp"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#2b00ba"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.773"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="86dp"
                android:layout_height="31dp"
                android:layout_marginTop="15dp"
                android:text="Gender"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="86dp"
                android:layout_height="31dp"
                android:layout_marginTop="15dp"
                android:text="Batch"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="86dp"
                android:layout_height="31dp"
                android:layout_marginTop="15dp"
                android:text="DOB"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/student_login_hostel_display"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Swami Vivekanand Boys Hostel"
                android:textAlignment="center"
                android:textColor="#749400"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#9335f0"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <ImageButton
            android:id="@+id/student_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners_ripple"
            android:backgroundTint="#9335f0"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/icon_back"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Profile"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_marginStart="60dp"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/student_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:background="#c4c427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5"
        app:srcCompat="@drawable/icon_unknown" />

    <Button
        android:id="@+id/student_profile_photo_update"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_corners_ripple"
        android:backgroundTint="#f5ab56"
        android:padding="10dp"
        android:text="Update The Profile Photo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="@+id/student_profile_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/student_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/student_profile_image" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="168dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toEndOf="@+id/student_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5" />

    <TextView
        android:id="@+id/student_profile_number_display"
        android:layout_width="168dp"
        android:layout_height="27dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/round_corners_ripple"
        android:text="6388639626"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/student_profile_phone_update"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_corners_ripple"
        android:backgroundTint="#f5ab56"
        android:padding="10dp"
        android:text="Edit Phone Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="@+id/student_profile_number_display"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/student_profile_number_display"
        app:layout_constraintTop_toTopOf="@+id/student_profile_photo_update" />

    <ProgressBar
        android:id="@+id/student_profile_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/student_profile_phone_update"
        app:layout_constraintEnd_toStartOf="@+id/student_profile_phone_update"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/student_profile_photo_update"
        app:layout_constraintTop_toTopOf="@+id/student_profile_phone_update" />



    <View
        android:id="@+id/divider"
        android:layout_width="395dp"
        android:layout_height="5dp"
        android:layout_marginTop="24dp"
        android:background="#aaaba9"
        app:layout_constraintTop_toBottomOf="@+id/student_profile_phone_update"
        tools:layout_editor_absoluteX="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>